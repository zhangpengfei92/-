//翻页
function tzfy() {

	var pageNum = $.trim($("#pageNum").val());
	if (!pageNum) {
		$.messager.alert('提示', '请输入页码!', 'info');
		return false;
	}
	var pages = $.trim($("#pages").val());
	if (pageNum*1 > pages*1) {
		$.messager.alert('提示', '输入的页数无效!', 'info'); 
		return false;
	}
	serach(pageNum);
}


